<launch>
  <!-- Static transform: IMU is 10 cm (0.1 m) above base_link -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="imu_to_base_link"
        args="0 0 0.1 0 0 0 base_link imu_link" />

  <!-- EKF node using YAML config -->
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_filter_node" output="screen" clear_params="true">
    <rosparam command="load" file="$(find robocon_node)/config/ekf.yaml" />
  </node>
</launch>
